<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:paddingBottom="18dp"
    android:background="@color/background_color"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/rank_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리포트 제목"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/rank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종목명"
        android:textStyle="normal"
        android:textColor="@color/green"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/rank_title"
        app:layout_constraintStart_toStartOf="@id/rank_title" />

    <TextView
        android:id="@+id/rank_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="view"
        android:textSize="14sp"
        android:textColor="@color/brown"
        app:layout_constraintStart_toStartOf="@id/rank_name"
        app:layout_constraintTop_toBottomOf="@id/rank_name"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/rank_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="hh:mm"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/rank_views"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
