<?xml version="1.0" encoding="utf-8"?>
    <com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_box_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/skeleton_box_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:background="@color/background_color">

        <TextView
            android:id="@+id/skeleton_box_title"
            android:layout_width="150dp"
            android:layout_height="22sp"
            android:background="@drawable/round_box"
            android:backgroundTint="@color/gray_dark"
            app:layout_constraintTop_toBottomOf="@id/skeleton_box_script"
            app:layout_constraintStart_toStartOf="@id/skeleton_box_script"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/skeleton_box_category"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:background="@drawable/round_box"
            android:backgroundTint="@color/gray_dark"
            app:layout_constraintTop_toTopOf="@id/skeleton_box_star_button"
            app:layout_constraintStart_toStartOf="@id/skeleton_box_title" />

        <TextView
            android:id="@+id/skeleton_box_date"
            android:layout_width="50sp"
            android:layout_height="20sp"
            android:background="@drawable/round_box"
            android:backgroundTint="@color/gray_dark"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@id/skeleton_box_title"
            app:layout_constraintTop_toBottomOf="@id/skeleton_box_name"/>

        <TextView
            android:id="@+id/skeleton_box_name"
            android:layout_width="50sp"
            android:layout_height="22sp"
            android:background="@drawable/round_box"
            android:backgroundTint="@color/gray_dark"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/skeleton_box_title"
            app:layout_constraintStart_toStartOf="@id/skeleton_box_title"/>

        <ImageButton
            android:id="@+id/skeleton_box_star_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/star_not"
            android:backgroundTint="@color/white"
            app:layout_constraintEnd_toEndOf="@id/skeleton_box_layout"
            app:layout_constraintTop_toTopOf="@id/skeleton_box_layout"/>

        <TextView
            android:id="@+id/skeleton_box_script"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@id/skeleton_box_star_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            android:background="@drawable/round_box"/>

        <Button
            android:id="@+id/skeleton_box_button"
            android:layout_width="117dp"
            android:layout_height="32dp"
            android:background="@drawable/round_button"
            app:layout_constraintTop_toBottomOf="@id/skeleton_box_date"
            app:layout_constraintEnd_toEndOf="@id/skeleton_box_script"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
