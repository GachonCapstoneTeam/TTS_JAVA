<?xml version="1.0" encoding="utf-8"?>

<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_rec_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color">



<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/skeleton_rit_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/skeleton_rit_name"
        android:layout_width="50sp"
        android:layout_height="20sp"
        android:background="@drawable/round_box"
        android:backgroundTint="@color/gray_dark"
        app:layout_constraintTop_toTopOf="@id/skeleton_rit_layout"
        app:layout_constraintStart_toStartOf="@id/skeleton_rit_layout"
        android:layout_margin="30dp"/>

    <TextView
        android:id="@+id/skeleton_rit_title"
        android:layout_width="match_parent"
        android:layout_height="22sp"
        android:background="@drawable/round_box"
        android:backgroundTint="@color/gray_dark"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/skeleton_rit_name"
        app:layout_constraintStart_toStartOf="@id/skeleton_rit_name"
        app:layout_constraintEnd_toEndOf="@id/skeleton_rit_script"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <TextView
        android:id="@+id/skeleton_rit_date"
        android:layout_width="30sp"
        android:layout_height="20sp"
        android:background="@drawable/round_box"
        android:backgroundTint="@color/gray_dark"
        app:layout_constraintEnd_toEndOf="@id/skeleton_rit_script"
        app:layout_constraintBottom_toBottomOf="@id/skeleton_rit_name"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/skeleton_rit_script"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/round_box"
        app:layout_constraintTop_toBottomOf="@id/skeleton_rit_title"
        app:layout_constraintBottom_toBottomOf="@id/skeleton_rit_layout"
        app:layout_constraintStart_toStartOf="@id/skeleton_rit_layout"
        app:layout_constraintEnd_toEndOf="@id/skeleton_rit_layout"
        android:layout_margin="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>