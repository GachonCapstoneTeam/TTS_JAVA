<?xml version="1.0" encoding="utf-8"?>

<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_ranking_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:paddingBottom="18dp"
    android:background="@color/background_color"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/skeleton_rank_title"
        android:layout_width="100sp"
        android:layout_height="22sp"
        android:background="@drawable/round_box"
        android:backgroundTint="@color/gray_dark"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/skeleton_rank_name"
        android:layout_width="50sp"
        android:layout_height="20sp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_box"
        android:backgroundTint="@color/gray_dark"
        app:layout_constraintTop_toBottomOf="@id/skeleton_rank_title"
        app:layout_constraintStart_toStartOf="@id/skeleton_rank_title" />

    <TextView
        android:id="@+id/skeleton_rank_views"
        android:layout_width="30sp"
        android:layout_height="20sp"
        android:background="@drawable/round_box"
        android:backgroundTint="@color/gray_dark"
        app:layout_constraintStart_toStartOf="@id/skeleton_rank_name"
        app:layout_constraintTop_toBottomOf="@id/skeleton_rank_name"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/skeleton_rank_date"
        android:layout_width="50sp"
        android:layout_height="20sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/round_box"
        android:backgroundTint="@color/gray_dark"
        app:layout_constraintBottom_toBottomOf="@id/skeleton_rank_views"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>