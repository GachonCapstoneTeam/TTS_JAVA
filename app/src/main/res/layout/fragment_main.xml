<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/green"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TalkStock"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGO"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_search"
            android:contentDescription="Search" />
    </LinearLayout>

    <!-- Tabs Section -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/main_tab_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/main_tab_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종목"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/main_tab_industry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="산업"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/main_tab_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시황"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/main_tab_investment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="투자"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/main_tab_economic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경제"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/main_tab_bond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="채권"/>

        </com.google.android.material.tabs.TabLayout>

    </HorizontalScrollView>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swiper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reportRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</LinearLayout>
